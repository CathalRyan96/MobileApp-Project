        <TextBlock x:ConnectionId='6' x:Name="textBlock3" HorizontalAlignment="Left" Margin="1016,369,0,0" Text="Points" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" RenderTransformOrigin="0.839,0.78"/>

